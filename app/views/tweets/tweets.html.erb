<% @tweets.each do |element| %>
  <div class="card border-primary mb-3" style="max-width: 88rem;">
  <div class="card-header">
    <%= element[:retweets_count] %> retweets
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p> <%= element[:tweet_text] %> </p>
      <footer class="blockquote-footer"> <%= element[:user_name] %> in <cite title="Source Title">Twitter</cite></footer>
      <%= link_to "View in Twitter", element[:url], :target => "_blank", rel: "nofollow" %>
    <!--  
      <a href="#{element[:url]}" class="card-link">Go somewhere</a>
     -->
    </blockquote>
  </div>
</div>
<% end %>

<%= will_paginate @tweets,  renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
